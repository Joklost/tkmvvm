<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="https://jonaskloster.dk/xml/tkmvvm"
           xmlns="https://jonaskloster.dk/xml/tkmvvm"
           elementFormDefault="qualified">

    <xs:include schemaLocation="https://raw.githubusercontent.com/Joklost/tkmvvm/master/tkmvvm/schema/include/simpletypes.xsd"/>
    <!-- Reference Manual: http://infohost.nmt.edu/tcc/help/pubs/tkinter/tkinter.pdf -->

    <!-- Root Element -->
    <xs:element name="Window">
        <xs:complexType>
            <xs:group ref="widgets" minOccurs="0" maxOccurs="unbounded"/>
            <!--<xs:attribute name="geometry" type="geometry"/>-->
            <xs:attribute name="width" type="xs:int"/>
            <xs:attribute name="height" type="xs:int"/>
            <xs:attribute name="title" type="xs:string"/>
            <xs:attribute name="theme" type="xs:string"/>
        </xs:complexType>
    </xs:element>
    <!-- /Root Element -->

    <!-- Elements -->
    <xs:element name="Frame" type="frame"/>
    <xs:element name="LabelFrame" type="label-frame"/>
    <xs:element name="Button" type="button"/>
    <xs:element name="Checkbutton" type="checkbutton"/>
    <xs:element name="Entry" type="entry"/>
    <xs:element name="Label" type="label"/>
    <xs:element name="Listbox" type="listbox"/>
    <xs:element name="Command" type="command"/>
    <xs:element name="Menu" type="menu"/>
    <xs:element name="Menubutton" type="menubutton"/>
    <xs:element name="Separator"/>
    <xs:element name="Cascade"/>
    <xs:element name="Radiobutton" type="radiobutton"/>
    <xs:element name="Message" type="message"/>
    <xs:element name="PanedWindow" type="paned-window"/>
    <xs:element name="PanedWindowChild" type="paned-window-child"/>
    <xs:element name="Scale" type="scale"/>
    <xs:element name="Scrollbar" type="scrollbar"/>
    <xs:element name="Spinbox" type="spinbox"/>
    <xs:element name="Text" type="text"/>

    <xs:group name="widgets">
        <xs:choice>
            <!-- ref elements -->
            <xs:element ref="Frame" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="LabelFrame" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="Button" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="Checkbutton" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="Entry" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="Label" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="Listbox" minOccurs="0" maxOccurs="unbounded"/>
            <!--<xs:element ref="Command" minOccurs="0" maxOccurs="unbounded"/>-->
            <xs:element ref="Menubutton" minOccurs="0" maxOccurs="unbounded"/>
            <!--<xs:element ref="Separator" minOccurs="0" maxOccurs="unbounded"/>-->
            <!--<xs:element ref="Cascade" minOccurs="0" maxOccurs="unbounded"/>-->
            <xs:element ref="Radiobutton" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="Message" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="PanedWindow" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="Scale" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="Scrollbar" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="Spinbox" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element ref="Text" minOccurs="0" maxOccurs="unbounded"/>
        </xs:choice>
    </xs:group>
    <!-- /Elements -->

    <!-- Complex Types -->
    <xs:complexType name="widget">
        <!-- @TODO: Images, Section 5.9 -->
        <!-- @TODO: Window names, Section 5.11 -->
        <!-- @TODO: Cap and join styles, Section 5.12 -->
        <!-- @TODO: Dash patterns, Section 5.13 -->
        <!-- @TODO: Matching stipple patterns, Section 5.14 -->
        <xs:attribute name="reference" type="xs:string"/>
        <xs:attribute name="grid-column" type="xs:int"/>
        <xs:attribute name="grid-row" type="xs:int"/>
        <xs:attribute name="grid-columnspan" type="xs:int"/>
        <xs:attribute name="grid-rowspan" type="xs:int"/>
        <xs:attribute name="grid-sticky" type="sticky"/>
        <xs:attribute name="grid-ipadx" type="dimension"/>
        <xs:attribute name="grid-ipady" type="dimension"/>
        <xs:attribute name="grid-padx" type="dimension"/>
        <xs:attribute name="grid-pady" type="dimension"/>


    </xs:complexType>
    <!-- @TODO: canvas widget, Section 8 -->

    <xs:complexType name="button">
        <xs:complexContent>
            <xs:extension base="widget">
                <!-- @TODO: Find common attributes for widgets -->
                <xs:attribute name="activebackground" type="color"/>
                <xs:attribute name="activeforeground" type="color"/>
                <xs:attribute name="anchor" type="anchor"/>
                <xs:attribute name="borderwidth" type="dimension" default="2p"/>
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="bitmap" type="bitmap"/>
                <xs:attribute name="command" type="command"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="default-state" type="state" default="normal"/>
                <xs:attribute name="disabledforeground" type="color"/>
                <xs:attribute name="foreground" type="color"/>
                <xs:attribute name="font" type="font"/>
                <xs:attribute name="font-size" type="xs:int"/>
                <xs:attribute name="font-style" type="font-style"/>
                <xs:attribute name="height" type="xs:int"/>
                <xs:attribute name="highlightbackground" type="color"/>
                <xs:attribute name="highlightcolor" type="color"/>
                <xs:attribute name="hightlightthickness" type="xs:int"/>
                <xs:attribute name="image" type="image"/>
                <xs:attribute name="justify" type="justify"/>
                <xs:attribute name="overrelief" type="relief"/>
                <xs:attribute name="padx" type="dimension"/>
                <xs:attribute name="pady" type="dimension"/>
                <xs:attribute name="relief" type="relief" default="raised"/>
                <xs:attribute name="repeatdelay" type="xs:int"/>
                <xs:attribute name="repeatinterval" type="xs:int"/>
                <xs:attribute name="state" type="state"/>
                <xs:attribute name="takefocus" type="bool-int"/>
                <xs:attribute name="text" type="xs:string"/>
                <xs:attribute name="text-binding" type="binding"/>
                <xs:attribute name="underline" type="xs:int" default="-1"/>
                <xs:attribute name="width" type="xs:int"/>
                <xs:attribute name="wraplength" type="dimension"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="checkbutton">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:attribute name="activebackground" type="color"/>
                <xs:attribute name="activeforeground" type="color"/>
                <xs:attribute name="anchor" type="anchor"/>
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="bitmap" type="bitmap"/>
                <xs:attribute name="borderwidth" type="dimension" default="2p"/>
                <xs:attribute name="command" type="command"/>
                <xs:attribute name="compound" type="compound"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="disabledforeground" type="color"/>
                <xs:attribute name="font" type="font"/>
                <xs:attribute name="font-size" type="xs:int"/>
                <xs:attribute name="font-style" type="font-style"/>
                <xs:attribute name="foreground" type="color"/>
                <xs:attribute name="height" type="xs:int" default="1"/>
                <xs:attribute name="highlightbackground" type="color"/>
                <xs:attribute name="highlightcolor" type="color"/>
                <xs:attribute name="hightlightthickness" type="xs:int" default="1"/>
                <xs:attribute name="image" type="image"/>
                <xs:attribute name="indicatoron" type="bool-int"/>
                <xs:attribute name="justify" type="justify"/>
                <xs:attribute name="offrelief" type="relief"/>
                <!-- @TODO: offvalue, onvalue -->
                <xs:attribute name="overrelief" type="relief"/>
                <xs:attribute name="padx" type="dimension" default="1p"/>
                <xs:attribute name="pady" type="dimension" default="1p"/>
                <xs:attribute name="relief" type="relief" default="flat"/>
                <xs:attribute name="selectcolor" type="color" default="#FF0000"/>
                <xs:attribute name="selectimage" type="image"/>
                <xs:attribute name="state" type="state"/>
                <xs:attribute name="takefocus" type="bool-int"/>
                <xs:attribute name="text" type="xs:string"/>
                <xs:attribute name="text-binding" type="binding"/>
                <xs:attribute name="underline" type="xs:int" default="-1"/>
                <xs:attribute name="variable-binding" type="binding"/>
                <xs:attribute name="width" type="xs:int"/>
                <xs:attribute name="wraplength" type="dimension"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="entry">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="borderwidth" type="dimension" default="2p"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="disabledbackground" type="color"/>
                <xs:attribute name="disabledforeground" type="color"/>
                <xs:attribute name="exportselection" type="bool-int" default="1"/>
                <xs:attribute name="foreground" type="color"/>
                <xs:attribute name="font" type="font"/>
                <xs:attribute name="font-size" type="xs:int"/>
                <xs:attribute name="font-style" type="font-style"/>
                <xs:attribute name="highlightbackground" type="color"/>
                <xs:attribute name="highlightcolor" type="color"/>
                <xs:attribute name="hightlightthickness" type="xs:int"/>
                <xs:attribute name="insertbackground" type="color"/>
                <xs:attribute name="insertborderwidth" type="dimension"/>
                <xs:attribute name="insertofftime" type="xs:int" default="300"/>
                <xs:attribute name="insertontime" type="xs:int" default="600"/>
                <xs:attribute name="insertwidth" type="dimension" default="2"/>
                <xs:attribute name="justify" type="justify"/>
                <xs:attribute name="readonlybackground" type="color"/>
                <xs:attribute name="relief" type="relief" default="sunken"/>
                <xs:attribute name="selectbackground" type="color"/>
                <xs:attribute name="selectborderwidth" type="dimension" default="1p"/>
                <xs:attribute name="show" type="show"/>
                <xs:attribute name="state" type="state"/>
                <xs:attribute name="takefocus" type="bool-int"/>
                <xs:attribute name="text-binding" type="binding"/>
                <!-- @TODO: validate, and validatecommand-->
                <xs:attribute name="width" type="xs:int" default="20"/>
                <!-- @TODO: xscrollcommand -->
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="label">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:attribute name="activebackground" type="color"/>
                <xs:attribute name="activeforeground" type="color"/>
                <xs:attribute name="anchor" type="anchor" default="center"/>
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="bitmap" type="bitmap"/>
                <xs:attribute name="borderwidth" type="dimension" default="2p"/>
                <xs:attribute name="compound" type="compound"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="disabledforeground" type="color"/>
                <xs:attribute name="font" type="font"/>
                <xs:attribute name="font-size" type="xs:int"/>
                <xs:attribute name="font-style" type="font-style"/>
                <xs:attribute name="foreground" type="color"/>
                <xs:attribute name="height" type="xs:int"/>
                <xs:attribute name="highlightbackground" type="color"/>
                <xs:attribute name="highlightcolor" type="color"/>
                <xs:attribute name="highlightthickness" type="xs:int"/>
                <xs:attribute name="image" type="image"/>
                <xs:attribute name="justify" type="justify" default="center"/>
                <xs:attribute name="padx" type="xs:int" default="1"/>
                <xs:attribute name="pady" type="xs:int" default="1"/>
                <xs:attribute name="relief" type="relief" default="flat"/>
                <xs:attribute name="state" type="state"/>
                <xs:attribute name="takefocus" type="bool-int"/>
                <xs:attribute name="text" type="xs:string"/>
                <xs:attribute name="text-binding" type="binding"/>
                <xs:attribute name="underline" type="xs:int" default="-1"/>
                <xs:attribute name="width" type="xs:int"/>
                <xs:attribute name="wraplength" type="xs:int"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="frame">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:group ref="widgets" minOccurs="0" maxOccurs="unbounded"/>

                <xs:attribute name="background" type="color"/>
                <xs:attribute name="borderwidth" type="dimension" default="0"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="height" type="dimension"/>
                <xs:attribute name="highlightbackground" type="color"/>
                <xs:attribute name="highlightcolor" type="color"/>
                <xs:attribute name="highlightthickness" type="xs:int"/>
                <xs:attribute name="padx" type="xs:int"/>
                <xs:attribute name="pady" type="xs:int"/>
                <xs:attribute name="relief" type="relief"/>
                <xs:attribute name="takefocus" type="bool-int"/>
                <xs:attribute name="width" type="dimension"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="label-frame">
        <xs:complexContent>
            <xs:extension base="frame">
                <xs:attribute name="foreground" type="color"/>
                <xs:attribute name="labelanchor" type="labelanchor"/>
                <!-- @TODO: labelwidget? -->
                <xs:attribute name="text" type="xs:string"/>
                <xs:attribute name="text-binding" type="binding"/>
            </xs:extension>
        </xs:complexContent>

    </xs:complexType>

    <xs:complexType name="listbox">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:attribute name="activestyle" type="activestyle" default="underline"/>
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="borderwidth" type="dimension" default="2p"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="disabledforeground" type="color"/>
                <xs:attribute name="exportselection" type="bool-int" default="1"/>
                <xs:attribute name="font" type="font"/>
                <xs:attribute name="font-size" type="xs:int"/>
                <xs:attribute name="font-style" type="font-style"/>
                <xs:attribute name="height" type="xs:int"/>
                <xs:attribute name="highlightbackground" type="color"/>
                <xs:attribute name="highlightcolor" type="color"/>
                <xs:attribute name="highlightthickness" type="xs:int"/>
                <xs:attribute name="list-binding" type="binding"/>
                <xs:attribute name="relief" type="relief"/>
                <xs:attribute name="selectbackground" type="color"/>
                <xs:attribute name="selectborderwidth" type="xs:int"/>
                <xs:attribute name="selectforeground" type="color"/>
                <xs:attribute name="selectmode" type="selectmode" default="browse"/>
                <xs:attribute name="state" type="state" default="normal"/>
                <xs:attribute name="takefocus" type="bool-int"/>
                <xs:attribute name="width" type="xs:int"/>
                <!-- @TODO: xscrollcommand, yscrollcommand -->
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="menu">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:choice minOccurs="0" maxOccurs="unbounded">
                    <xs:element ref="Checkbutton" minOccurs="0" maxOccurs="unbounded"/>
                    <xs:element ref="Command" minOccurs="0" maxOccurs="unbounded"/>
                    <xs:element ref="Separator" minOccurs="0" maxOccurs="unbounded"/>
                    <xs:element ref="Cascade" minOccurs="0" maxOccurs="unbounded"/>
                    <xs:element ref="Radiobutton" minOccurs="0" maxOccurs="unbounded"/>
                    <xs:element ref="Menubutton" minOccurs="0" maxOccurs="unbounded"/>
                </xs:choice>

                <xs:attribute name="activebackground" type="color"/>
                <xs:attribute name="activeborderwidth" type="dimension" default="1p"/>
                <xs:attribute name="activeforeground" type="color"/>
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="borderwidth" type="dimension"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="disabledforeground"/>
                <xs:attribute name="font" type="font"/>
                <xs:attribute name="font-size" type="xs:int"/>
                <xs:attribute name="font-style" type="font-style"/>
                <xs:attribute name="foreground" type="color"/>
                <xs:attribute name="postcommand" type="command"/>
                <xs:attribute name="relief" type="relief" default="raised"/>
                <xs:attribute name="selectcolor" type="color"/>
                <xs:attribute name="tearoff" type="xs:int"/>
                <xs:attribute name="tearoffcommand" type="command"/>
                <xs:attribute name="title" type="xs:string"/>
                <xs:attribute name="title-binding" type="binding"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="menubutton">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:attribute name="menu" type="xs:string"/>

                <xs:attribute name="activebackground" type="color"/>
                <xs:attribute name="activeforeground" type="color"/>
                <xs:attribute name="anchor" type="anchor"/>
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="bitmap" type="bitmap"/>
                <xs:attribute name="borderwidth" type="dimension" default="2p"/>
                <xs:attribute name="compound" type="compound" default="none"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="direction" type="direction"/>
                <xs:attribute name="disabledforeground" type="color"/>
                <xs:attribute name="foreground" type="color"/>
                <xs:attribute name="font" type="font"/>
                <xs:attribute name="font-size" type="xs:int"/>
                <xs:attribute name="font-style" type="font-style"/>
                <xs:attribute name="height" type="xs:int"/>
                <xs:attribute name="highlightbackground" type="color"/>
                <xs:attribute name="highlightcolor" type="color"/>
                <xs:attribute name="highlightthickness" type="xs:int"/>
                <xs:attribute name="image" type="image"/>
                <xs:attribute name="justify" type="justify"/>
                <xs:attribute name="padx" type="xs:int"/>
                <xs:attribute name="pady" type="xs:int"/>
                <xs:attribute name="relief" type="relief" default="raised"/>
                <xs:attribute name="state" type="state"/>
                <xs:attribute name="text" type="xs:string"/>
                <xs:attribute name="text-binding" type="binding"/>
                <xs:attribute name="underline" type="xs:int"/>
                <xs:attribute name="width" type="xs:int"/>
                <xs:attribute name="wraplength" type="xs:int"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="message">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:attribute name="aspect" type="xs:int"/>
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="borderwidth" type="dimension" default="2p"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="font" type="font"/>
                <xs:attribute name="font-size" type="xs:int"/>
                <xs:attribute name="font-style" type="font-style"/>
                <xs:attribute name="foreground" type="color"/>
                <xs:attribute name="highlightbackground" type="color"/>
                <xs:attribute name="highlightcolor" type="color"/>
                <xs:attribute name="highlightthickness" type="xs:int"/>
                <xs:attribute name="justify" type="justify"/>
                <xs:attribute name="padx" type="xs:int"/>
                <xs:attribute name="pady" type="xs:int"/>
                <xs:attribute name="relief" type="relief" default="flat"/>
                <xs:attribute name="takefocus" type="bool-int"/>
                <xs:attribute name="text" type="xs:string"/>
                <xs:attribute name="text-binding" type="binding"/>
                <xs:attribute name="width" type="xs:int"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="option-menu">
        <!-- @TODO: Section 19 has no reference of widget options for option-menu -->
    </xs:complexType>

    <xs:complexType name="paned-window">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:sequence>
                    <xs:element ref="PanedWindowChild" minOccurs="0" maxOccurs="unbounded"/>
                </xs:sequence>
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="borderwidth" type="dimension" default="2p"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="handlepad" type="dimension" default="8p"/>
                <xs:attribute name="handlesize" type="dimension" default="8p"/>
                <xs:attribute name="height" type="dimension"/>
                <xs:attribute name="opaqueresize" type="xs:boolean" default="true"/>
                <xs:attribute name="orient" type="orientation"/>
                <xs:attribute name="relief" type="relief" default="flat"/>
                <xs:attribute name="sashpad" type="dimension" default="0"/>
                <xs:attribute name="sashrelief" type="relief" default="flat"/>
                <xs:attribute name="sashwidth" type="dimension" default="2p"/>
                <xs:attribute name="showhandle" type="xs:boolean" default="false"/>
                <xs:attribute name="width" type="dimension"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="paned-window-child">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:group ref="widgets" minOccurs="0" maxOccurs="unbounded"/>

                <xs:attribute name="after" type="xs:string"/>
                <xs:attribute name="before" type="xs:string"/>
                <xs:attribute name="height" type="dimension"/>
                <xs:attribute name="minsize" type="dimension"/>
                <xs:attribute name="padx" type="dimension"/>
                <xs:attribute name="pady" type="dimension"/>
                <xs:attribute name="sticky" type="sticky"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="radiobutton">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:attribute name="activebackground" type="color"/>
                <xs:attribute name="activeforeground" type="color"/>
                <xs:attribute name="anchor" type="anchor"/>
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="bitmap" type="bitmap"/>
                <xs:attribute name="borderwidth" type="dimension" default="2p"/>
                <xs:attribute name="command" type="command"/>
                <xs:attribute name="compound" type="compound" default="none"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="disabledforeground" type="color"/>
                <xs:attribute name="font" type="font"/>
                <xs:attribute name="font-size" type="xs:int"/>
                <xs:attribute name="font-style" type="font-style"/>
                <xs:attribute name="height" type="xs:int" default="1"/>
                <xs:attribute name="highlightbackground" type="color"/>
                <xs:attribute name="highlightcolor" type="color"/>
                <xs:attribute name="highlightthickness" type="xs:int" default="1"/>
                <xs:attribute name="image" type="image"/>
                <xs:attribute name="indicatoron" type="bool-int"/>
                <xs:attribute name="justify" type="justify" default="center"/>
                <xs:attribute name="offrelief" type="relief" default="raised"/>
                <xs:attribute name="overrelief" type="relief"/>
                <xs:attribute name="padx" type="xs:int"/>
                <xs:attribute name="pady" type="xs:int"/>
                <xs:attribute name="relief" type="relief"/>
                <xs:attribute name="selectcolor" type="color"/>
                <xs:attribute name="selectimage" type="image"/>
                <xs:attribute name="state" type="state" default="normal"/>
                <xs:attribute name="takefocus" type="bool-int"/>
                <xs:attribute name="text" type="xs:string"/>
                <xs:attribute name="text-binding" type="binding"/>
                <xs:attribute name="underline" type="xs:int" default="-1"/>
                <xs:attribute name="value-binding" type="binding"/>
                <xs:attribute name="control-binding" type="binding"/>
                <xs:attribute name="width" type="xs:int"/>
                <xs:attribute name="wraplength" type="xs:int"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="scale">
        <xs:complexContent>
            <xs:extension base="widget">
                <xs:attribute name="activebackground" type="color"/>
                <xs:attribute name="background" type="color"/>
                <xs:attribute name="borderwidth" type="dimension" default="2p"/>
                <xs:attribute name="command" type="command"/>
                <xs:attribute name="cursor" type="cursor"/>
                <xs:attribute name="digits-binding" type="binding"/>
                <xs:attribute name="font" type="font"/>
                <xs:attribute name="font-size" type="xs:int"/>
                <xs:attribute name="font-style" type="font-style"/>
                <xs:attribute name="foreground" type="color"/>
                <xs:attribute name="from_" type="xs:float" default="0.0"/>
                <xs:attribute name="highlightbackground" type="color"/>
                <xs:attribute name="highlightcolor" type="color"/>
                <xs:attribute name="highlightthickness" type="xs:int" default="1"/>
                <xs:attribute name="label" type="xs:string"/>
                <xs:attribute name="label-binding" type="binding"/>
                <xs:attribute name="length" type="dimension" default="100p"/>
                <xs:attribute name="orient" type="orientation" default="vertical"/>
                <xs:attribute name="relief" type="relief" default="flat"/>
                <xs:attribute name="repeatdelay" type="xs:int" default="300"/>
                <xs:attribute name="repeatinterval" type="xs:int"/>
                <xs:attribute name="resolution" type="xs:float"/>
